@page "/Usuario/Register/{data?}"
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>PAGINA RAIZOR de registro usuario:</h1>
<div class="container p-4">
	<div class="row">
		<div class="col-md-4 mx-auto">
			<div class="card text-center">
				<div class="card-header">
					<h3>Registrar</h3>
				</div>
				<img src="~/images/icons/logo-google.png" class="mx-auto w-25">
				<div class="card-body">
					<form method="post">
						<div method="form-group">
							<!--<label asp-for="Input.Email"></label>-->
							<Input asp-for="Input.Email" placeholder="Email" class="form-control"/>
							<span asp-validation-for="Input.Email" class="text-danger"></span>
						</div>
						<div method="form-group">
							<Input asp-for="Input.Password" placeholder="Password" class="form-control" />
							<span asp-validation-for="Input.Password" class="text-danger"></span>
						</div>
						<div method="form-group">
							<Input asp-for="Input.ConfirmPassword" placeholder="Password"  class="form-control" />
							<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
						</div>
						<div class="form-group">
							<button type="submit" class="btn btn-primary btn-block">Register</button>
						</div>
					</form>
					<!--Label para mensaje de error-->
					<label id="Message" class="text-danger">@Html.DisplayFor(m=>m.Input.ErrorMessage)</label>
				</div>
			</div>
		</div>
	</div>
</div>
@section Scripts {
	<partial name="_ValidationScriptsPartial"/>
}